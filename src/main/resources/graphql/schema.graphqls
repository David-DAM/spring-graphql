type Post {
    id: ID!
    title: String,
    content: String,
    author: String,
    imageUrl: String,
    createdAt: String,
    updatedAt: String,
    deletedAt: String,
}

input PostDto{
    title: String,
    content: String,
    author: String,
    imageUrl: String,
}

type Query{
    getAllPosts: [Post]
    getRecentPosts(count:Int,offset:Int): [Post]
    getPostById(id: ID!): Post
}

type Mutation{
    deletePostById(id:ID!): Post
    savePost(postDto: PostDto!): Post
}